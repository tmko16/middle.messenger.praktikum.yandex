{
  "exclude": ["server.js", "dist", "node_modules"],
  "compilerOptions": {
    "types": ["mocha"],
    "outDir": "dist",
    "target": "ES2021",
    "declaration": false,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "src/*"
      ]
    }
  }
}